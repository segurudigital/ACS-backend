{
  "name": "acs-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js --ignore logs/",
    "dev:debug": "DEBUG=* nodemon index.js",
    "init-db": "node scripts/init-db.js",
    "init-db:force": "node scripts/init-db.js --force",
    "init-db:verbose": "node scripts/init-db.js --verbose",
    "seed": "npm run init-db",
    "seed:service-types": "node migrations/seedServiceTypes.js",
    "reset-db": "npm run init-db:force",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "build": "npm run validate",
    "start:prod": "NODE_ENV=production node index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "logs": "pm2 logs",
    "monitor": "pm2 monit",
    "health": "curl -f http://localhost:5000/health || exit 1",
    "backup:db": "node scripts/backup-db.js",
    "restore:db": "node scripts/restore-db.js",
    "migrate": "node scripts/migrate.js",
    "migrate:organization-data": "node scripts/migrate-organization-data.js",
    "migrate:hierarchy": "node scripts/run-hierarchy-migration.js",
    "drop:organizations": "node scripts/drop-organizations-collection.js",
    "clean:org-data": "node scripts/clean-organizational-data.js",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "clean:logs": "rm -rf logs/*.log",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "outdated": "npm outdated",
    "update:check": "npm outdated",
    "update:dependencies": "npm update",
    "docker:build": "docker build -t acs-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env acs-backend",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "authentication",
    "rbac",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend API for ACS Admin Authentication and RBAC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.933.0",
    "@aws-sdk/lib-storage": "^3.933.0",
    "@aws-sdk/s3-request-presigner": "^3.933.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "rate-limit-redis": "^4.2.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/multer": "^2.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**",
      "!dist/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "warn",
      "no-var": "warn",
      "no-undef": "warn",
      "no-useless-escape": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
